<div class="invoice-box">
  <div class="invoice-date">
    <table cellpadding="0" cellspacing="0">
      <tr class="top">
        <td></td><td></td><td></td>
        <td colspan="5">
          <table>
            <tr>
              <td>
                Guayaquil
              </td>
              <td>
                <%= @invoice.created_at.day %>
              </td>
              <td>
                <%= @invoice.created_at.month %>
              </td>
              <td>
                <%= @invoice.created_at.year %>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </div>
  <div class="invoice-customer-detail">
    <table>
      <tr>
        <td width="75%">
          <%= @invoice.client.name %>
        </td>
      </tr>
      <tr>
        <td width="75%">
          <%= @invoice.client.cedula %>
        </td>
      </tr>
      <tr>
        <td width="75%">
          <%= @invoice.client.address %>
        </td>     
        <td><span style="text-align: right;"> <%= @invoice.client.phone %></span></td>
      </tr>
    </table>
  </div>
  <div class="list-items">
    <table>
      <% @invoice.details.each do |detail| %>
        <tr class="item">
          <td width="10%">
            <%= detail.quantity %>
          </td>
          
          <td width="70%">
            <%= detail.item.name %>
          </td>

          <td width="20%" style="text-align: right;">
            <%= number_to_currency detail.price_total, unit: "$" %>
          </td>
        </tr>
        <%= %>
      <% end %>
    
    </table>
  </div>


  <table>
    <tr class="total">
      <td></td><td></td><td></td>
      
      <td colspan="4">
          <%= number_to_currency @invoice.sub_total, unit: "$" %>
      </td>
    </tr>
    <tr class="total">
      <td></td><td></td><td></td>
      
      <td colspan="4">
          <%= number_to_currency @invoice.iva, unit: "$" %>
      </td>
    </tr>
    <tr class="total">
      <td></td><td></td><td></td>
      
      <td colspan="4">
          <%= number_to_currency(@invoice.total, :unit => "$") %>
      </td>
    </tr>
  </table>
</div>